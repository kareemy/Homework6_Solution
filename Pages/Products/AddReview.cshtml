@page
@model Homework6.Pages_Products.AddReviewModel

@{
    ViewData["Title"] = "Add Product Review";
}

<h1>Create</h1>

<h4>Product Review</h4>
<hr />
<form method="post">
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Review.ProductID" class="control-label"></label>
            <select asp-for="Review.ProductID" asp-items="Model.ProductsDropDown" class="form-select">
                <option value="">Choose...</option>
            </select>
            <span asp-validation-for="Review.ProductID" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Review.Score" class="form-label"></label>
            <input asp-for="Review.Score" class="form-control">
            <span asp-validation-for="Review.Score" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Review.ReviewText" class="form-label"></label>
            <textarea asp-for="Review.ReviewText" class="form-control"></textarea>
            <span asp-validation-for="Review.ReviewText" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}